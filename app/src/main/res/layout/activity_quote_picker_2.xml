<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_a"
        android:padding="10dp"
        android:id="@+id/rlButtons"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvCancel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:text="@string/cancel" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvCommit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:text="@string/commit" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_quote"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="8dp"
        android:background="@color/grey_a"
        android:id="@+id/tvSelectQuote"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/tvMoveAndSelectQuote"
        android:layout_below="@id/tvSelectQuote"
        android:text="@string/move_and_select_quote_2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tvLine"
        android:layout_below="@id/tvMoveAndSelectQuote"
        android:background="@color/grey_8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlButtons"
        android:layout_below="@id/tvLine">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/yellow"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/quote"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tvCompleteQuote"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_above="@id/tvCompleteQuote"
            android:id="@+id/tvPages"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="0/0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tvPages"
            android:id="@+id/llQuotes"
            android:orientation="vertical"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/ivArrowLeft"
            android:src="@drawable/arrow_left"
            android:layout_above="@id/tvPages"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right"
            android:id="@+id/ivArrowRight"
            android:layout_above="@id/tvPages"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

