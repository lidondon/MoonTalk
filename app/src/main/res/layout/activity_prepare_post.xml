<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="8dp"
        android:background="@color/grey_a"
        android:id="@+id/tvPost"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/hsv"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/llPhotos">
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/ivDefault"-->
                    <!--android:src="@drawable/default_photo"-->
                    <!--android:layout_gravity="center"/>-->
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:id="@+id/tvLocalAlbum"
            android:text="從手機或裝置上傳照片"
            android:padding="8dp"
            android:background="@color/grey_a"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:id="@+id/tvActionAlbum"
            android:text="從Moon Talk相簿中選取照片上傳"
            android:padding="8dp"
            android:background="@color/grey_a"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
            android:id="@+id/tvCancel"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:text="@string/cancel"
            android:padding="8dp"
            android:background="@color/grey_a"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:background="@color/grey_a"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvPreviousStep"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:text="@string/previous_step" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvGoOn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:text="@string/go_on" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
