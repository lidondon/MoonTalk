<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_a"
        android:padding="10dp"
        android:id="@+id/rlButtons"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvCancel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:text="@string/cancel" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvCommit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:text="@string/commit" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_quote"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="8dp"
        android:background="@color/grey_a"
        android:id="@+id/tvSelectQuote"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:id="@+id/tvMoveAndSelectReplacement"
        android:layout_below="@id/tvSelectQuote"
        android:text="@string/move_and_select_replacement"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tvLine"
        android:layout_below="@id/tvMoveAndSelectReplacement"
        android:background="@color/grey_8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvLine"
        android:layout_above="@id/rlButtons">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llWordPicker"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="invisible">
            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/npWord"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llIvs"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_operation_height"
                    android:id="@+id/ivNo"
                    android:layout_margin="5dp"
                    android:src="@drawable/no"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/iv_operation_height"
                    android:id="@+id/ivYes"
                    android:layout_margin="5dp"
                    android:src="@drawable/yes"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llQuote"
            android:layout_above="@id/llWordPicker">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuote"
                android:textSize="20dp"
                android:textStyle="bold"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
